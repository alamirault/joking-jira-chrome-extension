{
  "manifest_version": 3,

  "name": "Joking Jira",
  "description": "Fix some frustrating Jira behaviors",
  "version": "1.0",

  "options_ui": {
    "page": "ConfigurationPopUp.html"
  },

  "action": {
    "default_icon": "joking-jira-logo-128.png",
    "default_popup": "ConfigurationPopUp.html"
  },

  "content_scripts": [
      {
          "matches": ["<all_urls>"],
          "js": ["js/vendor.js", "js/sprint_goal_as_title.js", "js/disable_emoji_autocomplete.js", "js/force_display_copy_link.js"]
      }
  ],

  "background": {
    "service_worker": "js/background.js"
  },

  "permissions": [
    "activeTab",
    "storage"
  ],

  "host_permissions": [
    "<all_urls>"
  ]
}
